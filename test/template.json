{
	"rules": [
		{
			"rule": "template -> activity_in_manifest",
			"condition": "name==Login"
		},
		{
			"rule": "template -> activity_in_manifest",
			"condition": ""
		},
		{
			"rule": "{{name}}Activity.java -> /features/{{feature}}",
			"condition": ""
		}
	],
	"parameters": [
		{
			"id": "name",
			"desc": "O nome do serviço",
			"regex": "",
			"type": "free",
			"required": true
		},
		{
			"id": "feature",
			"desc": "O nome da feature",
			"type": "free",
			"regex": ""
		},
		{
			"id": "type",
			"desc": "O tipo de exchange de dados",
			"regex": "",
			"type": "select",
			"required": false,
			"options": ["GET", "POST", "PUT", "DELETE"]
		},
		{
			"id": "ObjectOut",
			"desc": "O objeto de saida",
			"type": "formatted",
			"required": true,
			"condition": "data_exchange==BODY"
		},
		{
			"id": "data_exchange",
			"desc": "O tipo de comunicação",
			"type": "select",
			"required": true,
			"options": ["PATH", "BODY", "QUERY", "MULTI"]
		},
		{
			"id": "url",
			"desc": "A URL do serviço (a partir do /v1/, ex: retail/{fryman}/purchase)",
			"regex": "",
			"type": "free",
			"required": true
		},
		{
			"id": "params",
			"desc": "Os parâmetros que vão na URL",
			"type": "list",
			"required": true,
			"condition": "data_exchange==BODY"
		}
	]
}
